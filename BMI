import streamlit as st

# Title
st.title("BMI Calculator")

# Name
name = st.text_input("Name")

# Gender
gender = st.radio("Gender", ("Male", "Female", "Other"))

# Age
age = st.number_input("Age", min_value=0, max_value=150)

# Address
address = st.text_input("Address")

# Hobbies
hobbies = st.multiselect("Hobbies", ["Reading", "Sports", "Music", "Traveling"])

# Weight
weight = st.number_input("Weight in kg", min_value=0.0)

# Height
height = st.number_input("Height in cm", min_value=0.0)

# Calculate BMI
bmi = weight / ((height/100) ** 2) if height > 0 else None

# Display BMI
if bmi is not None:
    st.write(f"Your BMI: {bmi:.2f}")
